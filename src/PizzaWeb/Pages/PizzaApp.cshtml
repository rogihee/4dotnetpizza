@page "/"
@inject IWebHostEnvironment webHostEnvironment 
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <title>PizzaApp</title>
        <base href="/" />
        <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" asp-append-version="webHostEnvironment.IsProduction()"/>
        <link href="css/app.css" rel="stylesheet" asp-append-version="webHostEnvironment.IsProduction()"/>
        <link href="PizzaApp.styles.css" rel="stylesheet" asp-append-version="webHostEnvironment.IsProduction()"/>
    </head>

    <body>
        <div id="app">Loading...</div>

        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
        <environment include="Development" exclude="Production">
            <script src="_framework/blazor.webassembly.js"></script>
        </environment>
        <environment include="Production" exclude="Development">
            <script src="_framework/blazor.webassembly.js" asp-append-version="true"></script>
        </environment>
    </body>

</html>
